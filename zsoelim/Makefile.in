srcdir = @srcdir@
VPATH = @srcdir@
top_srcdir = @top_srcdir@
INSTALL = @INSTALL@

include ../include/Defines

.PHONY:	$(DEFAULT_TARGETS)

MANCPPFLAGS := -I../include -I$(top_srcdir)
override LDLIBS = -lc @LEXLIB@

all: zsoelim

zsoelim: ../lib/libman.a

../lib/libman.a:
	$(MAKE) -C ../lib

# The standard targets
install: all
	$(MKINSTALLDIRS) $(DESTDIR)$(bindir)
	$(INSTALL_PROGRAM) zsoelim $(DESTDIR)$(bindir)/$(zsoelim)

uninstall:
	rm -f $(DESTDIR)$(bindir)/$(zsoelim)
	
clean:
	rm -f zsoelim *.o core *~

distclean: zsoelim.c clean
	rm -f Makefile

realclean: distclean
	rm -f zsoelim.c tags

TAGS:
	$(MKTAGS) $(srcdir)/*.[lc]
